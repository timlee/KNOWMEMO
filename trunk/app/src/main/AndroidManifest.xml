<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.knowmemo.usermanagement">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="com.knowmemo.usermanagement.global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.knowmemo.usermanagement.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.knowmemo.usermanagement.RegisterActivity">
        </activity>
        <activity
            android:name="com.knowmemo.usermanagement.ForgetPwdActivity">
        </activity>
        <activity
            android:name="com.knowmemo.usermanagement.ShowWordActivity">
        </activity>
        <activity
            android:name="com.knowmemo.usermanagement.MainChoiceActivity">
        </activity>
        <activity
            android:name="com.knowmemo.usermanagement.LevelChoiceActivity">
        </activity>
    </application>

</manifest>
